@model UpdateWorkerDto

@{
    SelectList departments = ViewData["WorkerDepartment"] as SelectList;
}

<!-- Begin Page Content -->
<div class="row align-items-center justify-content-center col-12 p-0 m-0">
    <div class="card shadow col-lg-6 col-md-8 col-10 p-0">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">Update Place</h6>
        </div>
        <div class="card-body">
            <form class="container" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="FullName"></label>
                    <input class="form-control" asp-for="FullName" />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ProfileImage"></label>
                    <input class="form-control" asp-for="ProfileImage" />
                    <span class="text-danger" asp-validation-for="ProfileImage"></span>
                </div
                <div class="mb-3">
                    <img style="width: 150px" src="~/uploads/workers/@Model.ProfileImageUrl" />
                </div>
                <div class="mb-3">
                    <select class="custom-select" asp-items="departments" asp-for="WorkerDepartmentId">
                        <option selected>Select Department</option>
                    </select>
                    <span class="text-danger" asp-validation-for="WorkerDepartmentId"></span>
                </div>
                <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

