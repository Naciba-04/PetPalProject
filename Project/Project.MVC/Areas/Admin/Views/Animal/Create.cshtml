@model CreateAnimalDto
@{
    var genderEnum = Enum.GetValues(typeof(Gender)).Cast<Gender>().ToList();
}

<!-- Begin Page Content -->
<div class="row align-items-center justify-content-center col-12 p-0 m-0">
    <div class="card shadow col-lg-6 col-md-8 col-10 p-0">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Place</h6>
        </div>
        <div class="card-body">
            <form class="container" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="Title"></label>
                    <input class="form-control" asp-for="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description"></label>
                    <input class="form-control" asp-for="Description" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Color"></label>
                    <input class="form-control" asp-for="Color" />
                    <span class="text-danger" asp-validation-for="Color"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Weight"></label>
                    <input class="form-control" asp-for="Weight" />
                    <span class="text-danger" asp-validation-for="Weight"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="CoverImage"></label>
                    <input class="form-control" asp-for="CoverImage" />
                    <span class="text-danger" asp-validation-for="CoverImage"></span>
                </div>
                <div class="form-group">
                    <label for="Gender">Gender</label>
                    <select id="Gender" name="Gender" class="form-control">
                        @foreach (var gender in genderEnum)
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>
                </div>
                <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
