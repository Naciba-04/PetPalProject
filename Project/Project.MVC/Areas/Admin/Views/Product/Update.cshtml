@model UpdateProductDto

@{
    SelectList departments = ViewData["Department"] as SelectList;
}

<!-- Begin Page Content -->
<div class="row align-items-center justify-content-center col-12 p-0 m-0">
    <div class="card shadow col-lg-6 col-md-8 col-10 p-0">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">Update Place</h6>
        </div>
        <div class="card-body">
            <form class="container" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="Title"></label>
                    <input class="form-control" asp-for="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description"></label>
                    <input class="form-control" asp-for="Description" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Quantity"></label>
                    <input class="form-control" asp-for="Quantity" />
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="CoverImage"></label>
                    <input class="form-control" asp-for="CoverImage" />
                    <span class="text-danger" asp-validation-for="CoverImage"></span>
                </div
                <div class="mb-3">
                    <img style="width: 150px" src="~/uploads/products/@Model.CoverImageUrl" />
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="OldPrice"></label>
                    <input class="form-control" asp-for="OldPrice" />
                    <span class="text-danger" asp-validation-for="OldPrice"></span>
                </div>
                 <div class="mb-3">
                    <label class="form-label" asp-for="NewPrice"></label>
                    <input class="form-control" asp-for="NewPrice" />
                    <span class="text-danger" asp-validation-for="NewPrice"></span>
                </div>
                <div class="mb-3">
                    <select class="custom-select" asp-items="departments" asp-for="DepartmentId">
                        <option selected>Select Department</option>
                    </select>
                    <span class="text-danger" asp-validation-for="DepartmentId"></span>
                </div>
               
                <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

