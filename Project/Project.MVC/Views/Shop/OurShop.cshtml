@model ICollection<GetAllProductDto>
<section class="product__area-four">
    <div class="container">
        <div class="row gutter-20 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
            @foreach (GetAllProductDto item in Model)
            {
                <div class="col" >
                    <div class="product__item">
                        <div class="product__thumb">
                            <a asp-controller="Shop" asp-action="ShopDetails" asp-route-id="@item.Id">
                                <img src="~/uploads/products/@item.CoverImageUrl" alt="img" style="width: 100%; height: auto;">
                            </a>
                            <div class="product__action">
                                <a href="product-details.html"><i class="flaticon-love"></i></a>
                                <a href="product-details.html"><i class="flaticon-loupe"></i></a>
                                <a href="product-details.html"><i class="flaticon-exchange"></i></a>
                            </div>
                            <div class="sale-wrap">
                                <span>New</span>
                            </div>
                            <div class="product__add-cart">
                                <a asp-controller="Cart" asp-action="AddToBasket" asp-route-productId="@item.Id" class="btn"><i class="flaticon-shopping-bag"></i>Add To Cart</a>
                            </div>
                        </div>
                        <div class="product__content"> 
                            
                            <h4 class="title"><a href="product-details.html">@item.Title</a></h4>
                            @if (item.NewPrice > 0)
                            {
                                <h3 class="price">@item.NewPrice AZN <del>@item.OldPrice </del></h3>
                            }
                            else 
                            {
                                <h3 class="price">@item.OldPrice AZN </h3>
                            }
                        </div>
                    </div>
                </div>
            }

           
        </div>
    </div>
</section>
<style>
    .product__thumb img {
        width: 100%; 
        height: 200px; 
        object-fit: cover; 
    }
</style>
