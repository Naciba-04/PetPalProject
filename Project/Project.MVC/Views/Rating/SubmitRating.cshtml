@model Rating

<div class="container rating-container">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4 fw-bold">Restoran üçün Reyting Verin</h3>

        <form asp-controller="Rating" asp-action="SubmitRating" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Rating (1-5)</label>
                <select class="form-select rating-select" asp-for="Score" required>
                    <option value="1">1 - Çox zəif</option>
                    <option value="2">2 - Zəif</option>
                    <option value="3">3 - Orta</option>
                    <option value="4">4 - Yaxşı</option>
                    <option value="5">5 - Əla</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Şərhiniz (istəyə bağlı)</label>
                <textarea class="form-control rating-textarea" asp-for="Comment" rows="4" placeholder="Buraya fikrinizi yazın..."></textarea>
            </div>
            <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
            <div class="text-center">
                <button type="submit" class="btn btn-submit">Göndər</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info mt-3 text-center">@ViewBag.Message</div>
        }
    </div>
</div>

<style>
    /* Formun header və footer-dən aralı olması */
    .rating-container {
        margin-top: 65px;  /* Header-dən aralı */
        margin-bottom: 70px; /* Footer-dən aralı */
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 70vh;
    }

    /* Formun əsas qutusu */
    .card {
        width: 50%;
        border-radius: 15px;
        background-color: #fff;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    /* Select qutusu (Rating seçimi) */
    .rating-select {
        border: 2px solid #007bff;
        padding: 10px;
        border-radius: 8px;
        font-size: 16px;
    }

    /* Şərh yazmaq üçün sahə */
    .rating-textarea {
        border: 2px solid #007bff;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
    }

    /* Göndər düyməsi */
    .btn-submit {
        background-color: #28a745;
        color: white;
        font-size: 18px;
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-submit:hover {
        background-color: #218838;
    }
</style>
