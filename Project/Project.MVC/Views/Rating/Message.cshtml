@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şərh Bölməsi</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f4f8;
        }

        .container {
            max-width: 450px;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: white;
            text-align: center;
            position: relative;
            top: -50px;
        }

        .message {
            background-color: #e3f2fd;
            color: #1565c0;
            font-weight: bold;
            padding: 15px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            min-height: 60px;
            text-align: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border: 1px solid #90caf9;
            line-height: 1.5;
            padding-right: 15px;
        }

            .message a {
                text-decoration: none;
                color: #1565c0;
                font-size: 22px;
                cursor: pointer;
                transition: 0.3s;
            }

                .message a:hover {
                    color: #0d47a1;
                }

        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: none;
            font-size: 16px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #1565c0;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

            button:hover {
                background-color: #0d47a1;
            }

        #comment-section {
            display: none;
        }
    </style>
</head>
<body>

    <div class="container">
        <div id="message" class="message">
            <span>Zəhmət olmasa qeydiyyatdan keçib, sonra yorum yazın.</span>
            <a id="register-link">
                <i class="fa-solid fa-user"></i>
            </a>
        </div>

        <div id="comment-section">
            <textarea placeholder="Şərhinizi yazın..." rows="4"></textarea>
            <button>Göndər</button>
        </div>
    </div>

    <script>
        let isRegistered = false;

        // Əgər qeydiyyatdan keçmişdirsə, mesaj gizlənir, şərh bölməsi açılır
        if (isRegistered) {
            document.getElementById('message').style.display = 'none';
            document.getElementById('comment-section').style.display = 'block';
        }

        // Register ikonuna klik edildikdə "Register" səhifəsinə yönləndir
        document.getElementById("register-link").addEventListener("click", function () {
            window.location.href = "/Account/Register";
        });
    </script>

</body>
</html>
