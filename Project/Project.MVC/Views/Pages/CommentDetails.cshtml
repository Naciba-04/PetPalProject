@model ICollection<GetAllRatingCommentDto>

<!-- Font Awesome ən son versiyası -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s" style="margin-top: 50px; margin-bottom: 100px;">
    <div class="container">
        <div class="text-center position-relative">
            <h5 class="section-title ff-secondary text-center text-primary fw-bold text-uppercase d-inline-block px-3 position-relative">
                <span class="position-absolute start-0 top-50 translate-middle-y bg-primary rounded-circle" style="width: 8px; height: 8px;"></span>
                Client Feedback
                <span class="position-absolute end-0 top-50 translate-middle-y bg-primary rounded-circle" style="width: 8px; height: 8px;"></span>
            </h5>
            <h1 class="mb-3 text-dark">What Our Clients Say</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var item in Model.DistinctBy(x => x.Comment)) // Comment eyni olanları çıxarır
            {
                <div class="testimonial-item bg-white border rounded shadow-lg p-5 position-relative" style="transition: transform 0.3s ease-in-out; cursor: pointer;">
                    <i class="fas fa-quote-left fa-4x text-primary position-absolute opacity-25" style="top: 10px; left: 20px;"></i>
                    <p class="text-muted mt-4">@item.Comment</p>
                    <div class="d-flex align-items-center mt-3">
                        <div class="position-relative d-flex justify-content-center align-items-center rounded-circle border border-3 border-primary" style="width: 60px; height: 60px; overflow: hidden; background: white;">
                            <img class="img-fluid position-absolute w-100 h-100" src="~/img/profilsekili.png" onerror="this.style.display='none';">
                            <i class="fas fa-user text-primary" style="font-size: 24px;"></i>
                        </div>
                        <div class="ps-3">
                            <h5 class="mb-1 text-dark">@item.AppUserName</h5>
                            <div class="stars mt-2 text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Score)
                                    {
                                        <i class="fas fa-star"></i> <!-- Tam dolu ulduz -->
                                    }
                                    else if (i - 0.5 == item.Score)
                                    {
                                        <i class="fas fa-star-half-alt"></i> <!-- Yarım ulduz -->
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i> <!-- Boş ulduz -->
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->

<style>
    .testimonial-item:hover {
        transform: scale(1.05);
    }

    .testimonial-item img:hover {
        transform: rotate(5deg);
    }
</style>
