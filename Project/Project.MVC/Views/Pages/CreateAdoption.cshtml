@model CreateAdoptionDto

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-4 border-0 col-lg-5 col-md-8 col-11 p-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h4 class="m-0">🦴 Adoption</h4>
        </div>
        <div class="card-body">
            <form method="POST">
                <div class="mb-3">
                    <label class="form-label fw-bold" asp-for="FullName"></label>
                    <input class="form-control rounded-3" asp-for="FullName" placeholder="Enter fullname" />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold" asp-for="Email"></label>
                    <input class="form-control rounded-3" asp-for="Email" placeholder="Enter email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="row">
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="Salary"></label>
                        <input class="form-control rounded-3" asp-for="Salary" placeholder="Enter Salary" />
                        <span class="text-danger" asp-validation-for="Salary"></span>
                    </div>
                    <div class="form-group">
                        <label for="HasHouse">Do you have a house?</label>
                        <select class="form-control" id="HasHouse" name="HasHouse">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    
                </div>


                <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>
                <button type="submit" class="btn btn-primary w-100 fw-bold py-2 rounded-3">💾 Save</button>
            </form>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .card {
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .form-control, .form-select {
        border: 2px solid #dee2e6;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }
</style>
